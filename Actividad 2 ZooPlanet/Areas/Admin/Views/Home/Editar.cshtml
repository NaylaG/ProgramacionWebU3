@model Actividad_2_ZooPlanet.Models.ViewModels.EspeciesViewModel
@{
    Layout = "_Layout";
}

<h1>Editar Especies</h1>

<form method="post" action="~/Admin/Home/Editar">
    <input type="hidden" asp-for="Especie.Id" />
    <label>Nombre:</label>
    <input required asp-for="Especie.Especie" />
    <label>Clase:</label>
    <select required asp-for="Especie.IdClase" asp-items="@(new SelectList(Model.Clasifiacacion,"Id","Nombre"))">
        <option value="">Seleccione una clasificación</option>
    </select>
    <label>Habitat:</label>
    <input required asp-for="Especie.Habitat" />
    <label>Peso:</label>
    <input type="number" step="0.1" asp-for="Especie.Peso" />
    <label>Tamaño:</label>
    <input step="0.1" asp-for="Especie.Tamaño" />
    <label>Observaciones:</label>
    <textarea asp-for="Especie.Observaciones"></textarea>

    @Html.ValidationSummary()

    <input type="submit" value="Guardar" />
    <a href="~/Admin">
        <input type="button" value="Cancelar" />
    </a>
</form>